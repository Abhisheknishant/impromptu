#!/usr/bin/env node
var resolve = require('resolve').sync;
var promptDir = process.env.HOME + '/.impromptu';
var impromptuPath;

try {
  impromptuPath = resolve('impromptu', {basedir: promptDir});
} catch(err) {
  process.stdout.write('Unable to find local Impromptu.\n$ ');
  process.exit();
}

require(impromptuPath).cli();
